{
  "name": "fastchapter",
  "version": "0.1.0",
  "private": true,
  "description": "Fast Chapter desktop app prototype",
  "main": "electron/main.cjs",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently -k \"npm:dev:ui\" \"npm:dev:electron\"",
    "dev:ui": "vite --strictPort",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 nodemon --watch electron --ext cjs --exec \"electron electron/main.cjs\"",
    "build": "vite build",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish never",
    "dist:win": "npm run build && electron-builder --publish never --win nsis portable",
    "dist:mac": "npm run build && electron-builder --publish never --mac dmg zip",
    "dist:unpacked": "npm run build && electron-builder --dir",
    "preview": "vite preview",
    "start": "electron electron/main.cjs"
  },
  "build": {
    "appId": "com.fastchapter.desktop",
    "productName": "Fast Chapter",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "prompts/**/*",
      "logo_app_logo.ico",
      "logo_app_logo.png",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "signAndEditExecutable": false,
      "icon": "logo_app_logo.ico"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-win-${arch}-setup.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Fast Chapter"
    },
    "portable": {
      "artifactName": "${productName}-${version}-win-${arch}-portable.${ext}"
    }
  },
  "dependencies": {
    "@openai/codex-sdk": "^0.104.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.453.0",
    "react": "^18.3.1",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^2.5.2",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^30.5.1",
    "electron-builder": "^26.8.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^8.0.1"
  }
}
